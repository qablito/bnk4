{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BeetsNKeys Normalized Error Response",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "error": {
      "type": "string",
      "pattern": "^[A-Z0-9_]+$",
      "minLength": 1
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "details": {
      "type": "object",
      "additionalProperties": true
    },
    "request_id": {
      "type": "string",
      "format": "uuid"
    }
  },
  "required": ["error", "message", "request_id"]
}

